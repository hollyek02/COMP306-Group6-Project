@model COMP306_Group6_Frontend.Models.FlightUpdateDto
@{
    ViewData["Title"] = "Edit Flight";
    var flightId = ViewBag.FlightId as string;
}
<div class="container mt-5 mb-5 p-4 shadow rounded bg-light">
    <h2 class="mb-4 text-primary">Edit Flight</h2>
    <form asp-action="Edit" asp-route-id="@flightId" method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="FlightNumber" class="form-label fw-bold"></label>
            <input asp-for="FlightNumber" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="DepartureAirport" class="form-label fw-bold"></label>
            <input asp-for="DepartureAirport" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="ArrivalAirport" class="form-label fw-bold"></label>
            <input asp-for="ArrivalAirport" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="AircraftId" class="form-label fw-bold"></label>
            <input asp-for="AircraftId" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="DepartureTime" class="form-label fw-bold"></label>
            <input asp-for="DepartureTime" type="datetime-local" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="ArrivalTime" class="form-label fw-bold"></label>
            <input asp-for="ArrivalTime" type="datetime-local" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="BasePrice" class="form-label fw-bold"></label>
            <input asp-for="BasePrice" type="number" step="0.01" class="form-control" min="0" required />
        </div>
        <div class="col-md-6">
            <label asp-for="Status" class="form-label fw-bold"></label>
            <input asp-for="Status" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="AvailableSeats" class="form-label fw-bold"></label>
            <input asp-for="AvailableSeats" type="number" class="form-control" min="0" required />
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
            <a href="/Flight" class="btn btn-outline-secondary ms-3">Cancel</a>
        </div>
    </form>
</div>
