@model COMP306_Group6_Frontend.Models.BookingCreateDto
@{
    ViewData["Title"] = "Edit Booking";
}
<div class="container mt-5 mb-5 p-4 shadow rounded bg-light">
    <h2 class="mb-4 text-primary">Edit Booking</h2>
    <form asp-action="Edit" method="post" class="row g-3">
        <input type="hidden" asp-for="FlightId" />
        <div class="col-md-6">
            <label asp-for="PassengerName" class="form-label fw-bold">Name</label>
            <input asp-for="PassengerName" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="Email" class="form-label fw-bold">Email</label>
            <input asp-for="Email" class="form-control" type="email" required />
        </div>
        <div class="col-md-6">
            <label asp-for="SeatCount" class="form-label fw-bold">Seats</label>
            <input asp-for="SeatCount" type="number" min="1" class="form-control" required />
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
            <a href="/Booking" class="btn btn-outline-secondary ms-3">Cancel</a>
        </div>
    </form>
</div>
