@model COMP306_Group6_Frontend.Models.FlightPatchDto
@{
    var flightId = ViewBag.FlightId as string;
    ViewData["Title"] = "Patch Flight";
}
<div class="container mt-5 mb-5 p-4 shadow rounded bg-light">
    <h2 class="mb-4 text-secondary">Patch Flight</h2>
    <form asp-action="Patch" asp-route-id="@flightId" method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="FlightNumber" class="form-label fw-bold"></label>
            <input asp-for="FlightNumber" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="DepartureAirport" class="form-label fw-bold"></label>
            <input asp-for="DepartureAirport" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="ArrivalAirport" class="form-label fw-bold"></label>
            <input asp-for="ArrivalAirport" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="AircraftId" class="form-label fw-bold"></label>
            <input asp-for="AircraftId" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="DepartureTime" class="form-label fw-bold"></label>
            <input asp-for="DepartureTime" type="datetime-local" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="ArrivalTime" class="form-label fw-bold"></label>
            <input asp-for="ArrivalTime" type="datetime-local" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="BasePrice" class="form-label fw-bold"></label>
            <input asp-for="BasePrice" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Status" class="form-label fw-bold"></label>
            <input asp-for="Status" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="AvailableSeats" class="form-label fw-bold"></label>
            <input asp-for="AvailableSeats" class="form-control" />
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-warning px-4">Save Patch</button>
            <a href="/Flight" class="btn btn-outline-secondary ms-3">Cancel</a>
        </div>
    </form>
</div>
