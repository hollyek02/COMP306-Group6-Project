@model COMP306_Group6_Frontend.Models.AircraftPatchDto
@{
    var aircraftId = ViewBag.AircraftId as string;
    ViewData["Title"] = "Patch Aircraft";
}
<div class="container mt-5 mb-5 p-4 shadow rounded bg-light">
    <h2 class="mb-4 text-secondary">Patch Aircraft</h2>
    <form asp-action="Patch" asp-route-id="@aircraftId" method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="Model" class="form-label fw-bold"></label>
            <input asp-for="Model" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Manufacturer" class="form-label fw-bold"></label>
            <input asp-for="Manufacturer" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="TotalSeats" class="form-label fw-bold"></label>
            <input asp-for="TotalSeats" type="number" class="form-control" min="1" />
        </div>
        <div class="col-md-6">
            <label asp-for="BusinessClassSeats" class="form-label fw-bold"></label>
            <input asp-for="BusinessClassSeats" type="number" class="form-control" min="0" />
        </div>
        <div class="col-md-6">
            <label asp-for="EconomyClassSeats" class="form-label fw-bold"></label>
            <input asp-for="EconomyClassSeats" type="number" class="form-control" min="0" />
        </div>
        <div class="col-md-6">
            <label asp-for="YearManufactured" class="form-label fw-bold"></label>
            <input asp-for="YearManufactured" type="number" class="form-control" min="1960" max="@DateTime.Now.Year" />
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-warning px-4">Save Patch</button>
            <a href="/Aircraft" class="btn btn-outline-secondary ms-3">Cancel</a>
        </div>
    </form>
</div>
