@model List<COMP306_Group6_Frontend.Models.AirportReadDto>
@{
    ViewData["Title"] = "Airports";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-primary">All Airports</h2>
        <a href="/Airport/Create" class="btn btn-success btn-lg">Add New Airport</a>
    </div>
    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>City</th>
                <th>Country</th>
                <th>Timezone</th>
                <th>Terminals</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ap in Model)
            {
                <tr>
                    <td>@ap.AirportCode</td>
                    <td>@ap.AirportName</td>
                    <td>@ap.City</td>
                    <td>@ap.Country</td>
                    <td>@ap.Timezone</td>
                    <td>@ap.NumberOfTerminals</td>
                    <td>
                        <a class="btn btn-sm btn-link" href="@Url.Action("Details", new { code = ap.AirportCode })">Details</a>
                        <a class="btn btn-sm btn-link" href="@Url.Action("Edit", new { code = ap.AirportCode })">Edit</a>
                        <a class="btn btn-sm btn-danger"
                           href="@Url.Action("Delete", new { code = ap.AirportCode })"
                           onclick="return confirm('Are you sure you want to delete this airport?');">
                            Delete
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
