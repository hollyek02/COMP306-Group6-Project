@model COMP306_Group6_Frontend.Models.BookingPatchDto
@{
    ViewData["Title"] = "Patch Booking";
}
<div class="container mt-5 mb-5 p-4 shadow rounded bg-light">
    <h2 class="mb-4 text-secondary">Patch Booking</h2>
    <form asp-action="Patch" method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="SeatCount" class="form-label fw-bold"></label>
            <input asp-for="SeatCount" type="number" min="1" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Status" class="form-label fw-bold"></label>
            <input asp-for="Status" class="form-control" />
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-warning px-4">Apply Patch</button>
            <a href="/Booking" class="btn btn-outline-secondary ms-3">Cancel</a>
        </div>
    </form>
</div>
