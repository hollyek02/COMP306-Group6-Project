@model List<COMP306_Group6_Frontend.Models.FlightReadDto>
@{
    ViewData["Title"] = "Flights";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-primary">All Flights</h2>
        <a href="/Flight/Create" class="btn btn-success btn-lg">Add New Flight</a>
    </div>
    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Number</th>
                <th>From</th>
                <th>To</th>
                <th>Aircraft</th>
                <th>Departs</th>
                <th>Arrives</th>
                <th>Status</th>
                <th>Seats</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fl in Model)
            {
                <tr>
                    <td>@fl.FlightId</td>
                    <td>@fl.FlightNumber</td>
                    <td>@fl.DepartureAirport</td>
                    <td>@fl.ArrivalAirport</td>
                    <td>@fl.AircraftId</td>
                    <td>@fl.DepartureTime.ToString("g")</td>
                    <td>@fl.ArrivalTime.ToString("g")</td>
                    <td>@fl.Status</td>
                    <td>@fl.AvailableSeats</td>
                    <td>
                        <a class="btn btn-sm btn-link" href="@Url.Action("Details", new { id = fl.FlightId })">Details</a>
                        <a class="btn btn-sm btn-link" href="@Url.Action("Edit", new { id = fl.FlightId })">Edit</a>
                        <a class="btn btn-sm btn-danger"
                           href="@Url.Action("Delete", new { id = fl.FlightId })"
                           onclick="return confirm('Are you sure you want to delete this flight?');">
                            Delete
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
