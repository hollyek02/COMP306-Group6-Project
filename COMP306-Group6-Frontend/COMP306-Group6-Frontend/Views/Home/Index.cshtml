@{
    ViewData["Title"] = "Home";
}
<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-3 text-primary fw-bold">Welcome to Smart Flight Booking</h1>
        <p class="lead text-secondary fs-4">Your one-stop portal for reserving flights, managing bookings, and exploring our modern fleet.</p>
        <a href="/Booking/Create" class="btn btn-success btn-lg px-5 py-3 mt-3">Book a Flight</a>
        <a href="/Booking" class="btn btn-outline-primary btn-lg px-5 py-3 mt-3 ms-3">Manage Bookings</a>
    </div>
    <div class="row mt-5 g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-center h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bolder text-success">Instant Booking</h5>
                    <p class="card-text">Easily select your preferred flight and reserve your seat in a few clicks.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-center h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bolder text-primary">All Your Plans in One Place</h5>
                    <p class="card-text">View, modify, or cancel any of your reservations when it’s convenient for you.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-center h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bolder text-dark">Explore Our Fleet</h5>
                    <p class="card-text">Browse among our wide selection of aircraft and destinations.</p>
                </div>
            </div>
        </div>
    </div>
</div>
